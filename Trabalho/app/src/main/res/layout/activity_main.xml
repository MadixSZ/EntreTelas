<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/fundo"
    tools:context="MainActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewPresentation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Trabalho de Mobile"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textViewPresentation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Este aplicativo integra os três trabalhos solicitados:\n\n
        • Cálcular aposentadoria\n
        • Cálcular notas de alunos\n
        • Navegação entre telas\n\n
        Juntamos todos em um só para facilitar."
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        tools:ignore="DuplicateIds" />


    <Button
        android:id="@+id/buttonT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/rosa"
        android:text="Ir para o Aplicativo de aposentadoria" />

    <Button
        android:id="@+id/buttonT3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/rosa"
        android:text="Ir para o Aplicativo de notas"
        tools:ignore="DuplicateIds" />

    <Button
        android:id="@+id/buttonT4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/rosa"
        android:text="Ir para os Participantes do grupo" />


</LinearLayout>
